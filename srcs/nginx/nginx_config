server {
	listen 80;
	listen [::]:80;
	server_name _;
	return 301 https://$server_name$request_uri;
}

server {
	listen 443 ssl;
	listen [::]:443 ssl;
	
	server_name _;

#	root /var/www/html;

	ssl_certificate /etc/ssl/localhost.crt;
	ssl_certificate_key /etc/ssl/localhost.key;

	index index.html index.htm index.php;

	location / {
		autoindex on;
		try_files $uri $uri/ =404;
	}
}